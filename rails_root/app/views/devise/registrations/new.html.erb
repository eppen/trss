<%= title '注册' %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, 'Email地址' %><br />
  <%= f.email_field :email, :size => 20 %></div>

  <div><%= f.label :password, '密码' %><br />
  <%= f.password_field :password, :size => 20 %></div>

  <div><%= f.label :password_confirmation, '确认密码' %><br />
  <%= f.password_field :password_confirmation, :size => 20 %></div>

  <p><%= f.submit "注册" %></p>
<% end %>
